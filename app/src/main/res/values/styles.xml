<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="AppTheme" parent="AppTheme.Base">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_from_top</item>
        <item name="android:activityOpenExitAnimation">@anim/anim_none</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_from_bottom</item>
        <item name="android:activityCloseExitAnimation">@anim/anim_none</item>
    </style>

</resources>
